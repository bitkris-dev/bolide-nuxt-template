{
	"name": "{{ name }}",
	"version": "1.0.0",
	"description": "{{ description }}",
	"author": "{{ author }}",
	"private": true,
	"config": {
		"nuxt": {
			"host": "0.0.0.0",
			"port": "{{ port }}"
		}
	},
	"scripts": {
		"setup": "yarn install --silent",
		"dev": "nuxt",
		"dev-remote": "cross-env API_ENV=remote PORT=8080 node --inspect node_modules/nuxt/bin/nuxt",
		"build": "nuxt build",
		"start": "nuxt start",
		"generate": "nuxt generate",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"precommit": "npm run lint",
		"analyze": "webpack nuxt.config.js analysis-bundle.log.txt --json | webpack-bundle-analyzer",
		"svg": "vsvg -s ./static/img/svg -t ./components/icons"
	},
	"dependencies": {
		"@nuxtjs/pwa": "^2.0.5",
		"@nuxtjs/sitemap": "^0.0.3",
		"axios": "^0.17.1",
		"cookies": "^0.7.1",
		"cross-env": "^5.0.5",
		"js-cookie": "^2.2.0",
		"lodash": "^4.17.5",
		"monomer-css": "^0.1.0",
		"node-sass": "^4.5.3",
		"nuxt": "^1.0.0-rc11",
		"sass-loader": "^6.0.6",
		"svg-inline-loader": "^0.8.0",
		"underscore": "^1.8.3",
		"vee-validate": "^2.0.4",
		"vue-i18n": "^7.4.0",
		"vue-server-renderer": "^2.5.9",
		"vue-svgicon": "^2.1.0",
		"vue-template-compiler": "^2.5.9"
	},
	"devDependencies": {
		"babel-eslint": "^8.0.2",
		"eslint": "^4.3.0",
		"eslint-config-standard": "^10.2.1",
		"eslint-loader": "^1.9.0",
		"eslint-plugin-html": "^4.0.0",
		"eslint-plugin-import": "^2.7.0",
		"eslint-plugin-node": "^5.1.1",
		"eslint-plugin-promise": "^3.5.0",
		"eslint-plugin-standard": "^3.0.1",
		"gulp-real-favicon": "^0.2.2",
		"path": "^0.12.7",
		"raw-loader": "^0.5.1",
		"webpack-requiredir": "^0.2.1"
	}
}
